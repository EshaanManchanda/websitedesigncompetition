# Frontend Environment Variables
# Copy this file to .env and configure for your environment

# Enable route messaging for development (optional)
# Set to 'true' to enable route tracking in development
VITE_ENABLE_ROUTE_MESSAGING=true

# Backend API URL
# Development: Point to local backend
VITE_API_URL=http://localhost:5050/api
# Production: Point to production API
# VITE_API_URL=https://websitedesigningcompetition.com/api

# Competition Dates Configuration
# Note: Store dates in ISO format (YYYY-MM-DD or YYYY-MM-DDTHH:mm:ss)
# Display format on website will be DD-MM-YYYY (e.g., 31-03-2025)
VITE_COMPETITION_YEAR=2026
VITE_REGISTRATION_OPEN_DATE=2025-12-01
VITE_REGISTRATION_CLOSE_DATE=2026-03-15T23:59:59
VITE_SUBMISSION_DEADLINE=2026-03-31T23:59:59
VITE_RESULTS_ANNOUNCEMENT_DATE=2026-04-15

# File Upload Configuration (client-side validation)
# Maximum file size in megabytes
VITE_MAX_FILE_SIZE_MB=50

# Optional: CDN Configuration (for production)
# CDN_IMG_PREFIX=https://cdn.example.com
# CDN_IMG_DEBUG=0
